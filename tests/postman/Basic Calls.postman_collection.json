		{
			"name": "2. Account",
			"item": [
				{
					"name": "1. Create Test User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"User Creation OK\", function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([201, 202]);",
									"});",
									"pm.test(\"Validating Data and setting User ID in env\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.email).to.eql(pm.environment.get(\"TEST_USER_EMAIL\"));",
									"    pm.environment.set(\"TEST_USER_ID\", jsonData.id)",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{TEST_USER_EMAIL}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{URL}}/account",
							"host": [
								"{{URL}}"
							],
							"path": [
								"account"
							]
						}
					},
					"response": []
				},
				{
					"name": "2. Get Account By ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{URL}}/account/{{TEST_USER_ID}}",
							"host": [
								"{{URL}}"
							],
							"path": [
								"account",
								"{{TEST_USER_ID}}"
							]
						}
					},
					"response": []
				},
